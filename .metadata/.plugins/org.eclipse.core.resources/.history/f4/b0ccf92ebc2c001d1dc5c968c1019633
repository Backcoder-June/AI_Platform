<script src="js/jquery-3.6.0.min.js" ></script>
<script>
$(document).ready(function(){
	let poseresult = '${poseresult}';
	let jsonresult = JSON.parse(poseresult); 
	
	$("#here").append(jsonresult.predictions[0][0].score); 
	$("#here").append(jsonresult.predictions[0][0].x);
	$("#here").append(jsonresult.predictions[0][0].y); 
	$("#here").append("<br>"); 

	
	let mycanvas = '$("#mycanvas")';
	let pencil = mycanvas.getContext("2d");
	
	var myimage = new Image();
	myimage.src= "http://localhost:8083/naverai/${param.image}"
	
	myimage.onload = function(){
		pencil.drawImage(myimage, 20,20, myimage.width, myimage.height);
		let x = jsonresult.predictions[0][0].x * myimage.width; 
		let y = jsonresult.predictions[0][0].x * myimage.height; 
		
		pencil.fillStyle="blue"; 
		pencil.fillRect(x,y,5,5);
		
	}
	
	
	
	
});
</script>



</head>
